                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="submit" form="formCreateTacGia" class="btn btn-primary" id="btnSaveTacGia">Lưu</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showToast(message, type = 'success') {
            const alertPlaceholder = document.getElementById('alertPlaceholder');
            if (!alertPlaceholder) return;
            alertPlaceholder.innerHTML = '';

            const wrapper = document.createElement('div');
            wrapper.innerHTML = [
                `<div class="alert alert-${type} alert-dismissible" role="alert">`,
                `   <div>${message}</div>`,
                '   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>',
                '</div>'
            ].join('');

            alertPlaceholder.appendChild(wrapper);

            if (type !== 'danger') {
                setTimeout(() => {
                    $(wrapper).alert('close');
                }, 5000);
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            const createForm = document.getElementById('createTaiLieuForm');
            const submitButton = document.getElementById('submitButton');

            if (createForm && submitButton) {
                createForm.addEventListener('submit', function(e) {
                    if ($(createForm).valid()) {
                        submitButton.disabled = true;
                        submitButton.innerHTML = '<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span> Đang tạo...';
                    }
                });
            }

            @if (TempData["StatusMessage"] != null && TempData["Message"] != null)
            {
                    <text>
                        setTimeout(function() {
                            showToast('@Html.Raw(TempData["Message"])', '@TempData["StatusMessage"]');
                            if ('@TempData["StatusMessage"]' === 'danger') {
                                if (submitButton) {
                                    submitButton.disabled = false;
                                    submitButton.innerHTML = '<i class="bx bx-plus me-1"></i> Tạo mới';
                                }
                            }
                        }, 10);
                    </text>
            }

            // ***** HÀM AJAX ĐÃ SỬA ĐỂ GỬI ĐÚNG PAYLOAD *****
            function handleAjaxCreation(formId, apiUrl, selectId, alertId, nameKey, maKey, modalId, additionalFields = []) {
                const form = document.getElementById(formId);
                const btnSave = document.getElementById(`btnSave${selectId.substring(6)}`);
                const alertBox = document.getElementById(alertId);
                const selectElement = document.getElementById(selectId);
                const modalElement = document.getElementById(modalId);
                const modal = bootstrap.Modal.getInstance(modalElement) || new bootstrap.Modal(modalElement);

                form.addEventListener('submit', function(e) {
                    e.preventDefault();

                    alertBox.classList.add('d-none');
                    btnSave.disabled = true;
                    btnSave.textContent = 'Đang xử lý...';

                    const payload = {};

                    // Xây dựng payload từ additionalFields
                    if (additionalFields.length > 0) {
                        additionalFields.forEach(field => {
                            const fieldElement = document.getElementById(field.id);
                            if (fieldElement) {
                                payload[field.key] = fieldElement.value;
                            }
                        });
                    }

                    // Debug: Log payload
                    console.log('Payload gửi đi:', JSON.stringify(payload));

                    fetch(apiUrl, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(payload)
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            const displayText = data.fullName || data[nameKey];
                            const newOption = new Option(displayText, data[maKey], true, true);
                            selectElement.appendChild(newOption);

                            modal.hide();

                            // Reset form
                            additionalFields.forEach(field => {
                                document.getElementById(field.id).value = '';
                            });

                            showToast(`Đã thêm ${displayText} thành công!`, 'info');
                        } else {
                            alertBox.textContent = data.message || 'Lỗi không xác định khi thêm mới.';
                            alertBox.classList.remove('d-none');
                        }
                    })
                    .catch(error => {
                        console.error('Lỗi AJAX:', error);
                        alertBox.textContent = 'Lỗi kết nối Server.';
                        alertBox.classList.remove('d-none');
                    })
                    .finally(() => {
                        btnSave.disabled = false;
                        btnSave.textContent = 'Lưu';
                    });
                });
            }

            // Khởi tạo AJAX cho các danh mục
            handleAjaxCreation(
                'formCreateTacGia',
                '/Tai-lieu/CreateNewTacGiaAjax',
                'selectTacGia',
                'TacGiaAlert',
                'fullName',
                'maTg',
                'addNewTacGiaModal',
                [
                    { key: 'HoDem', id: 'HoDemInput' },
                    { key: 'Ten', id: 'TenInput' },
                    { key: 'MaQg', id: 'MaQgInput' }
                ]
            );

            handleAjaxCreation(
                'formCreateNxb',
                '/Tai-lieu/CreateNewNxbAjax',
                'selectNxb',
                'NxbAlert',
                'tenNxb',
                'maNxb',
                'addNewNxbModal',
                [
                    { key: 'MaQg', id: 'MaQgNxbInput' },
                    { key: 'TenNxb', id: 'TenNxbInput' }
                ]
            );

            handleAjaxCreation(
                'formCreateThL',
                '/Tai-lieu/CreateNewTheLoaiAjax',
                'selectThL',
                'ThLAlert',
                'tenThL',
                'maThL',
                'addNewThLModal',
                [
                    { key: 'TenThL', id: 'TenThLInput' }
                ]
            );

            handleAjaxCreation(
                'formCreateDd',
                '/Tai-lieu/CreateNewDinhDangAjax',
                'selectDd',
                'DdAlert',
                'tenDd',
                'maDd',
                'addNewDdModal',
                [
                    { key: 'TenDd', id: 'TenDdInput' }
                ]
            );

            // ===== LOGIC QUẢN LÝ TÁC GIẢ =====
            const tableBody = document.getElementById('tacGiaListBody');
            const btnAdd = document.getElementById('btnAddTacGia');
            const selectTacGia = document.getElementById('selectTacGia');
            const selectVaiTro = document.getElementById('selectVaiTro');
            const inputVaiTroKhac = document.getElementById('inputVaiTroKhac');
            const errorElement = document.getElementById('tacGiaError');

            function getNextIndex() {
                return tableBody.rows.length;
            }

            selectVaiTro.addEventListener('change', function() {
                if (this.value === 'Khác') {
                    inputVaiTroKhac.style.display = 'block';
                    inputVaiTroKhac.required = true;
                } else {
                    inputVaiTroKhac.style.display = 'none';
                    inputVaiTroKhac.required = false;
                }
            });

            tableBody.addEventListener('click', function(e) {
                if (e.target.closest('.remove-tacgia-btn')) {
                    const row = e.target.closest('tr');
                    row.remove();
                    reindexRows();
                }
            });

            btnAdd.addEventListener('click', function(e) {
                e.preventDefault();

                const maTg = selectTacGia.value;
                const tenTacGia = selectTacGia.options[selectTacGia.selectedIndex].text;
                let vaiTro = selectVaiTro.value;
                if (vaiTro === 'Khác') {
                    vaiTro = inputVaiTroKhac.value.trim();
                }

                errorElement.textContent = '';

                if (!maTg) {
                    errorElement.textContent = 'Vui lòng chọn Tác giả.';
                    return;
                }

                if (!vaiTro || vaiTro === 'Chọn Vai trò...') {
                    errorElement.textContent = 'Vui lòng chọn hoặc điền Vai trò.';
                    return;
                }

                if (document.querySelector(`tr[data-ma-tg="${maTg}"]`)) {
                    errorElement.textContent = 'Tác giả này đã được thêm.';
                    return;
                }

                const index = getNextIndex();

                const newRow = document.createElement('tr');
                newRow.setAttribute('data-ma-tg', maTg);
                newRow.innerHTML = `
                    <td>${tenTacGia}</td>
                    <td>${vaiTro}</td>
                    <td class="text-center">
                        <button type="button" class="btn btn-sm btn-label-danger btn-icon waves-effect remove-tacgia-btn" title="Xóa">
                            <i class="bx bx-trash"></i>
                        </button>
                    </td>
                `;

                const inputMaTg = document.createElement('input');
                inputMaTg.type = 'hidden';
                inputMaTg.name = `TTaiLieuTacGia[${index}].MaTg`;
                inputMaTg.value = maTg;
                newRow.appendChild(inputMaTg);

                const inputVaiTroHidden = document.createElement('input');
                inputVaiTroHidden.type = 'hidden';
                inputVaiTroHidden.name = `TTaiLieuTacGia[${index}].VaiTro`;
                inputVaiTroHidden.value = vaiTro;
                newRow.appendChild(inputVaiTroHidden);

                const inputMaTlHidden = document.createElement('input');
                inputMaTlHidden.type = 'hidden';
                inputMaTlHidden.name = `TTaiLieuTacGia[${index}].MaTl`;
                inputMaTlHidden.value = '';
                newRow.appendChild(inputMaTlHidden);

                tableBody.appendChild(newRow);

                selectTacGia.value = "";
                selectVaiTro.value = "";
                inputVaiTroKhac.value = "";
                inputVaiTroKhac.style.display = 'none';

                reindexRows();
            });

            function reindexRows() {
                const rows = tableBody.querySelectorAll('tr');
                rows.forEach((row, newIndex) => {
                    const hiddenInputs = row.querySelectorAll('input[type="hidden"]');
                    hiddenInputs.forEach(input => {
                        const name = input.name.replace(/\[\d+\]/, `[${newIndex}]`);
                        input.name = name;
                    });
                });
            }
        });
    </script>
