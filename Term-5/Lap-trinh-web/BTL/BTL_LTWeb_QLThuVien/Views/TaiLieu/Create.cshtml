                <form id="formCreateTacGia">
                    <div class="mb-3">
                        <label for="MaQgInput" class="form-label">Quốc gia</label>
                        <select class="form-select" id="MaQgInput" name="MaQg" required asp-items="ViewBag.QuocGiaList">
