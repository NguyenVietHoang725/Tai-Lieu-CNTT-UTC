@model Library_Manager.Models.TTaiLieu
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Chỉnh sửa Tài liệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUrl = Context.Request.Path + Context.Request.QueryString;
    // Lấy thông tin tài khoản đang đăng nhập
    var currentMaTk = Context.Session.GetString("MaTk");
    var currentTenDn = Context.Session.GetString("UserName");
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h1 class="fw-bold text-primary mb-4">
        <i class='bx bx-pencil fs-2 me-2 border p-1 rounded-2'></i> Chỉnh sửa thông tin Tài liệu
    </h1>

    @* --- HIỂN THỊ THÔNG BÁO TỪ SERVER --- *@
    @if (TempData["Message"] != null)
    {
        <div id="alertPlaceholder" class="alert alert-@(TempData["StatusMessage"]) alert-dismissible" role="alert">
            @Html.Raw(TempData["Message"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    else
    {
        <div id="alertPlaceholder"></div>
    }
    @* --- KẾT THÚC KHỐI HIỂN THỊ THÔNG BÁO --- *@


    <div class="card">
        <div class="card-header border-bottom">
            <h5 class="card-title mb-0">Chỉnh sửa thông tin cho: <span class="text-info fw-bold">@Model.TenTl</span></h5>
        </div>

        <form asp-action="Edit" id="editTaiLieuForm" method="post" enctype="multipart/form-data">
            <div class="card-body">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <input type="hidden" asp-for="MaTl" />
                <input type="hidden" asp-for="MaTk" value="@currentMaTk" /> @* Cập nhật MaTk khi sửa *@
                <input type="hidden" asp-for="MaNn" /> @* MaNn ẩn, không cho sửa *@


                <div class="row">

                    <div class="col-md-6 pt-3">
                        <h6 class="text-muted text-uppercase mb-3 mt-0">
                            <i class='bx bx-book me-1'></i> Thông tin cơ bản
                        </h6>

                        @* Tên Tài liệu (Giữ nguyên) *@
                        <div class="mb-3">
                            <label asp-for="TenTl" class="form-label">Tên Tài liệu</label>
                            <input asp-for="TenTl" class="form-control" />
                            <span asp-validation-for="TenTl" class="text-danger"></span>
                        </div>

                        @* Nhà xuất bản (Select) + Nút thêm mới (Giữ nguyên) *@
                        <div class="mb-3">
                            <label asp-for="MaNxb" class="form-label">Nhà xuất bản</label>
                            <div class="input-group">
                                <select asp-for="MaNxb" id="selectNxb" class="form-select" asp-items="ViewBag.MaNxb"></select>
                                <button class="btn btn-outline-primary" type="button" data-bs-toggle="modal" data-bs-target="#addNewNxbModal" title="Thêm Nhà xuất bản mới">
                                    <i class="bx bx-plus"></i>
                                </button>
                            </div>
                            <span asp-validation-for="MaNxb" class="text-danger"></span>
                        </div>


                        @* Lần Xuất bản (Giữ nguyên) *@
                        <div class="mb-3">
                            <label asp-for="LanXuatBan" class="form-label">Lần Xuất bản</label>
                            <input asp-for="LanXuatBan" class="form-control" type="number" />
                            <span asp-validation-for="LanXuatBan" class="text-danger"></span>
                        </div>

                        @* Năm Xuất bản (Giữ nguyên) *@
                        <div class="mb-3">
                            <label asp-for="NamXuatBan" class="form-label">Năm Xuất bản</label>
                            <input asp-for="NamXuatBan" class="form-control" type="number" />
                            <span asp-validation-for="NamXuatBan" class="text-danger"></span>
                        </div>

                        @* Khổ cỡ (Giữ nguyên) *@
                        <div class="mb-3">
                            <label asp-for="KhoCo" class="form-label">Khổ cỡ</label>
                            <input asp-for="KhoCo" class="form-control" />
                            <span asp-validation-for="KhoCo" class="text-danger"></span>
                        </div>

                        @* Thông tin MaNn cũ (Để người dùng biết) *@
                        <div class="mb-3">
                            <label class="form-label d-block text-secondary">Ngôn ngữ gốc</label>
                            <p class="fw-semibold mb-0">
                                <span class="badge bg-label-info">@Model.MaNnNavigation?.TenNn (@Model.MaNn)</span>
                                <span class="d-block small text-muted">Mã Tài liệu phụ thuộc vào Ngôn ngữ, không thể sửa.</span>
                            </p>
                        </div>
                    </div>

                    <div class="col-md-6 pt-3">
                        <h6 class="text-muted text-uppercase mb-3 mt-0">
                            <i class='bx bx-category me-1'></i> Phân loại & Thông tin khác
                        </h6>

                        @* Thể loại (Select) + Nút thêm mới (Giữ nguyên) *@
                        <div class="mb-3">
                            <label asp-for="MaThL" class="form-label">Thể loại</label>
                            <div class="input-group">
                                <select asp-for="MaThL" id="selectThL" class="form-select" asp-items="ViewBag.MaThL"></select>
                                <button class="btn btn-outline-primary" type="button" data-bs-toggle="modal" data-bs-target="#addNewThLModal" title="Thêm Thể loại mới">
                                    <i class="bx bx-plus"></i>
                                </button>
                            </div>
                            <span asp-validation-for="MaThL" class="text-danger"></span>
                        </div>

                        @* Định dạng (MaDd) (Select) + Nút thêm mới (Giữ nguyên) *@
                        <div class="mb-3">
                            <label asp-for="MaDd" class="form-label">Định dạng</label>
                            <div class="input-group">
                                <select asp-for="MaDd" id="selectDd" class="form-select" asp-items="ViewBag.MaDd"></select>
                                <button class="btn btn-outline-primary" type="button" data-bs-toggle="modal" data-bs-target="#addNewDdModal" title="Thêm Định dạng mới">
                                    <i class="bx bx-plus"></i>
                                </button>
                            </div>
                            <span asp-validation-for="MaDd" class="text-danger"></span>
                        </div>

                        @* Số Trang (Giữ nguyên) *@
                        <div class="mb-3">
                            <label asp-for="SoTrang" class="form-label">Số Trang</label>
                            <input asp-for="SoTrang" class="form-control" type="number" />
                            <span asp-validation-for="SoTrang" class="text-danger"></span>
                        </div>

                        @* Thông tin người sửa hiện tại *@
                        <div class="mb-3">
                            <label class="form-label d-block text-secondary">Người quản lý cập nhật</label>
                            <p class="fw-semibold mb-0">
                                @if (!string.IsNullOrEmpty(currentTenDn))
                                {
                                    <span class="badge bg-label-warning">@currentTenDn (@currentMaTk)</span>
                                }
                                else
                                {
                                    <span class="badge bg-label-danger">Lỗi: Không tìm thấy TK trong Session</span>
                                }
                                <span class="d-block small text-muted">Thông tin tài khoản này sẽ được lưu.</span>
                            </p>
                        </div>

                        @* Thông tin Tài khoản tạo gốc (chỉ hiển thị) *@
                        <div class="mb-3">
                            <label class="form-label d-block text-secondary">Người tạo gốc</label>
                            <p class="fw-semibold mb-0">
                                <span class="badge bg-label-success">@Model.MaTkNavigation?.TenDangNhap (@Model.MaTk)</span>
                            </p>
                        </div>

                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <h6 class="text-muted text-uppercase mb-3">
                            <i class='bx bx-user-pin me-1'></i> Quản lý Tác giả
                        </h6>

                        @* Thêm Select Vai trò (giống Create) *@
                        <div class="input-group mb-3">
                            <select id="selectTacGia" class="form-select" aria-label="Chọn Tác giả" asp-items="ViewBag.TacGiaList">
                                <option value="" selected disabled>Chọn Tác giả...</option>
                            </select>

                            <select id="inputVaiTro" class="form-select" aria-label="Chọn Vai trò">
                                @* ĐÃ ĐỔI THÀNH SELECT *@
                                <option value="" selected disabled>Chọn Vai trò...</option>
                                <option value="Tác giả chính">Tác giả chính</option>
                                <option value="Biên tập">Biên tập</option>
                                <option value="Dịch giả">Dịch giả</option>
                                <option value="Khác">Khác</option>
                            </select>

                            <input type="text" id="inputVaiTroKhac" class="form-control" placeholder="Điền vai trò khác" style="display:none;">

                            <button class="btn btn-outline-success" type="button" id="btnAddTacGia">
                                <i class="bx bx-plus"></i> Thêm
                            </button>

                            <button class="btn btn-outline-primary" type="button" data-bs-toggle="modal" data-bs-target="#addNewTacGiaModal" title="Thêm Tác giả mới vào hệ thống">
                                <i class="bx bx-user-plus"></i>
                            </button>
                        </div>
                        <p id="tacGiaError" class="text-danger small"></p>

                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th style="width: 40%;">Tác giả</th>
                                        <th style="width: 40%;">Vai trò</th>
                                        <th style="width: 20%;" class="text-center">Hành động</th>
                                    </tr>
                                </thead>
                                <tbody id="tacGiaListBody">
                                    @if (Model.TTaiLieuTacGia != null)
                                    {
                                        int index = 0;
                                        foreach (var item in Model.TTaiLieuTacGia)
                                        {
                                            <tr data-ma-tg="@item.MaTg">
                                                <td>@item.MaTgNavigation?.HoDem @item.MaTgNavigation?.Ten</td>
                                                <td>@item.VaiTro</td>
                                                <td class="text-center">
                                                    <button type="button" class="btn btn-sm btn-label-danger btn-icon waves-effect remove-tacgia-btn" title="Xóa">
                                                        <i class="bx bx-trash"></i>
                                                    </button>
                                                </td>
                                                <input type="hidden" name="TTaiLieuTacGia[@index].MaTg" value="@item.MaTg" />
                                                <input type="hidden" name="TTaiLieuTacGia[@index].VaiTro" value="@item.VaiTro" />
                                                <input type="hidden" name="TTaiLieuTacGia[@index].MaTl" value="@Model.MaTl" />
                                            </tr>
                                            index++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                @* KHỐI UPATE ẢNH (GIỮ NGUYÊN) *@
                <h6 class="text-muted text-uppercase mb-3 mt-4">
                    <i class='bx bx-image me-1'></i> Cập nhật Ảnh Bìa
                </h6>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="imageFile" class="form-label">Chọn Ảnh Bìa mới (tùy chọn)</label>
                        <input type="file" id="imageFile" name="imageFile" class="form-control" accept="image/jpeg,image/png,image/gif" />
                        <div class="form-text">Nếu không chọn file, ảnh bìa cũ sẽ được giữ lại.</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Ảnh Bìa hiện tại</label><br />
                        @if (!string.IsNullOrEmpty(Model.Anh))
                        {
                            <img src="@Url.Content(Model.Anh)" alt="Ảnh bìa" style="max-width: 100px; height: auto; border: 1px solid #ccc;" />
                        }
                        else
                        {
                            <span class="text-muted small">Chưa có ảnh bìa.</span>
                        }
                        <input type="hidden" asp-for="Anh" /> @* Giữ lại đường dẫn ảnh cũ nếu không update *@
                    </div>
                </div>

            </div>

            @* FOOTER CỦA CARD: Chứa các nút Hành động (Bố cục Trái/Phải cho trang Edit) *@
            <div class="card-footer border-top pt-3">

                @* Dùng justify-content-between để đẩy 2 khối nút ra xa nhau *@
                <div class="d-flex justify-content-between">

                    @* KHỐI BÊN TRÁI: Nút Quay lại (Đã sửa style) *@
                    <div>
                        @if (!string.IsNullOrEmpty(ViewBag.ReturnUrl))
                        {
                            <a href="@ViewBag.ReturnUrl" class="btn btn-outline-primary">
                                <i class="bx bx-arrow-back me-1"></i> Quay lại
                            </a>
                        }
                        else
                        {
                            <a asp-action="Index" class="btn btn-outline-primary">
                                <i class="bx bx-arrow-back me-1"></i> Quay lại danh sách
                            </a>
                        }
                    </div>

                    @* KHỐI BÊN PHẢI: Các nút hành động chính (Lưu, Chi tiết) *@
                    <div class="d-flex gap-2">

                        <button type="submit" class="btn btn-primary" id="submitButton">
                            <i class="bx bx-save me-1"></i> Lưu thay đổi
                        </button>

                        <a asp-action="Details"
                           asp-route-id="@Model?.MaTl"
                           asp-route-returnUrl="@currentUrl"
                           class="btn btn-success">
                            <i class="bx bx-detail me-1"></i> Xem chi tiết Tài liệu
                        </a>
                    </div>

                </div>
            </div>

        </form>
    </div>
</div>

