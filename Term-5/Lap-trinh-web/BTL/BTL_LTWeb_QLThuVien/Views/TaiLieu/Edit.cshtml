@section Scripts {
    <script>
        // Hàm hiển thị thông báo (Toast)
        function showToast(message, type = 'success') {
            const alertPlaceholder = document.getElementById('alertPlaceholder');
            if (!alertPlaceholder) return;
            alertPlaceholder.innerHTML = '';

            const wrapper = document.createElement('div');
            wrapper.innerHTML = [
                `<div class="alert alert-${type} alert-dismissible" role="alert">`,
                `   <div>${message}</div>`,
                '   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>',
                '</div>'
            ].join('');

            alertPlaceholder.appendChild(wrapper);

            // Bổ sung logic TỰ ĐỘNG ẨN nếu không phải lỗi 'danger'
            if (type !== 'danger') {
                setTimeout(() => {
                    // Sử dụng jQuery/Bootstrap để ẩn alert
                    $(wrapper).alert('close');
                }, 5000); // Tự động ẩn sau 5 giây
            }
        }

        document.addEventListener('DOMContentLoaded', function () {

            // ==========================================================
            // LOGIC FORM SUBMIT (Kiểm tra và báo cáo kết quả) (GIỮ NGUYÊN)
            // ==========================================================
            const editForm = document.getElementById('editTaiLieuForm');
            const submitButton = document.getElementById('submitButton');

            // 1. Logic chặn submit và đổi text nút
            if (editForm && submitButton) {
                editForm.addEventListener('submit', function(e) {
                    // Kiểm tra validation client-side (do _ValidationScriptsPartial cung cấp)
                    if ($(editForm).valid()) {
                        // Vô hiệu hóa nút Submit
                        submitButton.disabled = true;
                        submitButton.innerHTML = '<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span> Đang lưu...';
                    }
                });
            }

            // 2. Logic hiển thị thông báo từ TempData (GIỮ NGUYÊN)
            @if (TempData["StatusMessage"] != null && TempData["Message"] != null)
            {
                        <text>
                            setTimeout(function() {
                                // Gọi showToast (hàm này đã có logic ẩn/không ẩn)
                                showToast('@Html.Raw(TempData["Message"])', '@TempData["StatusMessage"]');

                                // Kích hoạt lại nút submit sau khi trang load lại (CHỈ KÍCH HOẠT LẠI NẾU LÀ LỖI 'danger')
                                if ('@TempData["StatusMessage"]' === 'danger') {
                                    if (submitButton) {
                                        submitButton.disabled = false;
                                        submitButton.innerHTML = '<i class="bx bx-save me-1"></i> Lưu thay đổi';
                                    }
