@model Library_Manager.Models.TTheLoai

@{
    ViewData["Title"] = "Chỉnh sửa Thể loại: " + Model.TenThL;
    var userRole = Context.Session.GetString("UserRole");
    bool canEdit = (userRole == "QTV" || userRole == "QLT");
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h1 class="fw-bold text-primary mb-4">
        <i class='bx bx-pencil fs-2 me-2'></i> Chỉnh sửa Thể loại
    </h1>

    @* PHẦN HIỂN THỊ THÔNG BÁO TEMP DATA *@
    @if (TempData["Message"] != null)
    {
        <div id="alertMessage" class="alert alert-@(TempData["StatusMessage"]) alert-dismissible" role="alert">
            @Html.Raw(TempData["Message"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">

        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                Chỉnh sửa thông tin Thể loại: <span class="text-primary fw-bold">@Model.TenThL</span>
            </h5>
            <small class="text-muted">Mã ThL: <span class="fw-bold">@Model.MaThL</span></small>
        </div>

        @* 2. THÊM: ID cho Form *@
        <form asp-action="Edit" id="editTheLoaiForm">
            <div class="card-body">

                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="MaThL" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Mã Thể loại</label>
                            <input value="@Model.MaThL" class="form-control" disabled />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="TenThL" class="form-label">Tên Thể loại</label>
                            <input asp-for="TenThL" class="form-control" />
                            <span asp-validation-for="TenThL" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </div>

            <div class="card-footer border-top pt-3">
                <div class="d-flex justify-content-between">

                    @* KHỐI BÊN TRÁI: Nút Quay lại - Dùng btn-outline-primary *@
                    <div>
                        <a asp-action="Index" class="btn btn-outline-primary">
                            <i class="bx bx-arrow-back me-1"></i> Quay lại danh sách
                        </a>
                    </div>

                    @* KHỐI BÊN PHẢI: Lưu & Xem chi tiết *@
                    <div class="d-flex gap-2">
                        <button type="submit" value="Save" class="btn btn-primary @(canEdit ? "" : "disabled")" id="submitButton">
                            <i class="bx bx-save me-1"></i> Lưu thay đổi
                        </button>

                        <a asp-action="Details" asp-route-id="@Model?.MaThL" class="btn btn-info">
                            <i class='bx bx-detail'></i> Chi tiết
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Hàm hiển thị thông báo (Toast)
        function showToast(message, type = 'success') {
            // Logic hiển thị toast... (Giữ nguyên)
            const alertPlaceholder = document.getElementById('alertMessage');
            alertPlaceholder.innerHTML = '';

            const wrapper = document.createElement('div');
            wrapper.innerHTML = [
                `<div class="alert alert-${type} alert-dismissible" role="alert">`,
                `  <div>${message}</div>`,
                '  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>',
                '</div>'
            ].join('');
            alertPlaceholder.appendChild(wrapper);
            // Tự động ẩn sau 5 giây (chỉ ẩn nếu là thành công)
            if (type === 'success') {
                setTimeout(() => {
                    $(wrapper).alert('close');
                }, 5000);
            }
        }

        document.addEventListener('DOMContentLoaded', function () {

            // SỬA: Trỏ đúng ID của Form
            const editForm = document.getElementById('editTheLoaiForm');
            const submitButton = document.getElementById('submitButton');

            // 1. Logic chặn submit và đổi text nút
            if (editForm && submitButton) {
                editForm.addEventListener('submit', function (e) {
                    // Kiểm tra validation client-side
                    if ($(editForm).valid()) {
                        // Vô hiệu hóa nút Submit
                        submitButton.disabled = true;
                        submitButton.innerHTML = '<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span> Đang lưu...';
                    }
                });
            }

            // 2. Logic hiển thị thông báo từ TempData
            @if (TempData["StatusMessage"] != null && TempData["Message"] != null)
            {
                        <text>
                            setTimeout(function() {
                                // Hiển thị toast
                                showToast('@Html.Raw(TempData["Message"])', '@TempData["StatusMessage"]');

                                // Kích hoạt lại nút submit nếu có lỗi
                                if ('@TempData["StatusMessage"]' === 'danger' && submitButton) {
                                    submitButton.disabled = false;
                                    submit submitButton.innerHTML = '<i class="bx bx-save me-1"></i> Lưu thay đổi';
                                }
                            }, 10);
                        </text>
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}