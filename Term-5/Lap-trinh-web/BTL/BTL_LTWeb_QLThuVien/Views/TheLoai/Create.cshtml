@model Library_Manager.Models.TTheLoai

@{
    ViewData["Title"] = "Tạo mới Thể loại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* ========================================================================
   KHỐI 1: CẤU TRÚC BỐ CỤC CHÍNH (CONTAINER)
   ======================================================================== *@
<div class="container-xxl flex-grow-1 container-p-y">

    @* --- PHẦN HIỂN THỊ THÔNG BÁO TỪ TEMP DATA (Để hiển thị lỗi khi Controller return View) --- *@
    @if (TempData["Message"] != null)
    {
        <div id="alertMessage" class="alert alert-@(TempData["StatusMessage"]) alert-dismissible" role="alert">
            @Html.Raw(TempData["Message"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* --- PHẦN 1.1: TIÊU ĐỀ TRANG --- *@
    <h1 class="fw-bold text-primary mb-4">
        <i class='bx bx-plus fs-2 me-2 border p-1 rounded-2'></i> Tạo mới thông tin Thể loại
    </h1>

    @* --- KHỐI: CARD BAO QUANH BIỂU MẪU --- *@
    <div class="card">

        @* HEADER CỦA CARD: Tiêu đề cố định *@
        <div class="card-header border-bottom">
            <h5 class="card-title mb-0">Nhập thông tin Thể loại mới</h5>
        </div>

        <form asp-action="Create">
            @* BODY CỦA CARD: Chứa Biểu mẫu nhập liệu *@
            <div class="card-body">

                @* Phần hiển thị lỗi tổng thể *@
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="row">
                    <div class="col-md-6 pt-3">
                        @* Mã Thể loại (BỎ NHẬP LIỆU) *@

                        @* Tên Thể loại *@
                        <div class="mb-3">
                            <label asp-for="TenThL" class="form-label">Tên Thể loại</label>
                            <input asp-for="TenThL" class="form-control" />
                            <span asp-validation-for="TenThL" class="text-danger"></span>
                        </div>

                    </div>
                </div>
            </div> @* End card-body *@

            @* FOOTER CỦA CARD: Nút Tạo mới và Quay lại (Đã chuẩn hóa bố cục) *@
            <div class="card-footer border-top pt-3">
                <div class="d-flex justify-content-between">

                    @* NÚT QUAY LẠI DANH SÁCH (TRÁI) - Dùng btn-outline-primary *@
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="bx bx-arrow-back me-1"></i> Quay lại danh sách
                    </a>

                    @* NÚT TẠO MỚI (PHẢI) *@
                    <button type="submit" value="Create" class="btn btn-primary">
                        <i class="bx bx-plus me-1"></i> Tạo mới
                    </button>
                </div>
            </div>
        </form>
    </div> @* End card *@
</div> @* End container-xxl *@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}