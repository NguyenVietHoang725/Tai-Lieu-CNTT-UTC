@model Library_Manager.Models.TBanDoc

@{
    ViewData["Title"] = "Chỉnh sửa Bạn đọc";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userRole = Context.Session.GetString("UserRole");
    bool canEdit = (userRole == "QTV" || userRole == "QLB");
}

@* ========================================================================
    KHỐI 1: CẤU TRÚC BỐ CỤC CHÍNH (CONTAINER)
    ======================================================================== *@
<div class="container-xxl flex-grow-1 container-p-y">

    @* --- PHẦN 1.1: TIÊU ĐỀ TRANG --- *@
    <h1 class="fw-bold text-primary mb-4">
        <i class='bx bx-pencil fs-2 me-2 border p-1 rounded-2'></i> Chỉnh sửa thông tin bạn đọc
    </h1>

    @* Vị trí hiển thị thông báo (Toast/Alert) *@
    @if (TempData["Message"] != null)
    {
        <div id="alertPlaceholder" class="alert alert-@(TempData["StatusMessage"]) alert-dismissible" role="alert">
            @Html.Raw(TempData["Message"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* --- KHỐI: CARD BAO QUANH BIỂU MẪU --- *@
    <div class="card">

        @* HEADER CỦA CARD: Tên biểu mẫu đang chỉnh sửa *@
        <div class="card-header border-bottom">
            <h5 class="card-title mb-0">Chỉnh sửa thông tin cho: <span class="text-primary fw-bold">@Model.HoDem @Model.Ten</span></h5>
        </div>

        <form asp-action="Edit" id="editBanDocForm">
            @* BODY CỦA CARD: Chứa Biểu mẫu nhập liệu *@
            <div class="card-body">

                @* Phần hiển thị lỗi tổng thể *@
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                @* Mã Bạn đọc (Input Field để hiển thị nhưng không cho sửa) *@
                <div class="row">
                    <div class="col-md-6 pt-3">
                        <div class="mb-3">
                            <label class="form-label">Mã Bạn đọc</label>
                            <input value="@Model.MaBd" class="form-control" disabled />
                        </div>
                    </div>
                </div>

                @* Mã Bạn đọc (Hidden Field) - Cần thiết cho việc chỉnh sửa *@
                <input type="hidden" asp-for="MaBd" />

                @* TÁI CẤU TRÚC: CHIA BIỂU MẪU THÀNH 2 CỘT & CHIA NHÓM THÔNG TIN *@
                <div class="row">

                    @* --- CỘT 1: THÔNG TIN CÁ NHÂN (6/12) --- *@
                    <div class="col-md-6 pt-3">
                        <h6 class="text-muted text-uppercase mb-3 mt-0">
                            <i class='bx bx-user me-1'></i> Thông tin cá nhân
                        </h6>

                        @* Họ Đệm *@
                        <div class="mb-3">
                            <label for="HoDem" class="form-label">Họ Đệm</label>
                            <input asp-for="HoDem" class="form-control" />
                            <span asp-validation-for="HoDem" class="text-danger"></span>
                        </div>

                        @* Tên *@
                        <div class="mb-3">
                            <label for="Ten" class="form-label">Tên</label>
                            <input asp-for="Ten" class="form-control" />
                            <span asp-validation-for="Ten" class="text-danger"></span>
                        </div>

                        @* Ngày Sinh (Sử dụng type="date") *@
                        <div class="mb-3">
                            <label for="NgaySinh" class="form-label">Ngày Sinh</label>
                            @* Format ngày sinh sang yyyy-MM-dd để input type="date" hoạt động đúng *@
                            <input asp-for="NgaySinh" class="form-control" type="date" value="@Model.NgaySinh.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="NgaySinh" class="text-danger"></span>
                        </div>

                        @* Giới Tính (Sử dụng Select) *@
                        <div class="mb-3">
                            <label for="GioiTinh" class="form-label">Giới Tính</label>
                            <select asp-for="GioiTinh" class="form-select">
                                <option value="M">Nam</option>
                                <option value="F">Nữ</option>
                            </select>
                            <span asp-validation-for="GioiTinh" class="text-danger"></span>
                        </div>
                    </div>

                    @* --- CỘT 2: THÔNG TIN LIÊN HỆ & ĐỊA CHỈ (6/12) --- *@
                    <div class="col-md-6 pt-3">
                        <h6 class="text-muted text-uppercase mb-3 mt-0">
                            <i class='bx bx-phone me-1'></i> Thông tin liên hệ
                        </h6>

                        @* Địa Chỉ *@
                        <div class="mb-3">
                            <label for="DiaChi" class="form-label">Địa Chỉ</label>
                            <input asp-for="DiaChi" class="form-control" />
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>

                        @* Số Điện Thoại *@
                        <div class="mb-3">
                            <label for="Sdt" class="form-label">Số Điện Thoại</label>
                            <input asp-for="Sdt" class="form-control" />
                            <span asp-validation-for="Sdt" class="text-danger"></span>
                        </div>

                        @* Email *@
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div> @* End card-body *@

            @* FOOTER CỦA CARD: Nút Lưu, Quay lại và Chi tiết (Đã sửa bố cục) *@
            <div class="card-footer border-top pt-3">
                <div class="d-flex justify-content-between">

                    @* KHỐI NÚT TRÁI (Quay lại) - Dùng btn-outline-primary *@
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="bx bx-arrow-back me-1"></i> Quay lại danh sách
                    </a>

                    @* KHỐI NÚT PHẢI (Lưu và Chi tiết) *@
                    <div class="d-flex gap-2">

                        @* NÚT LƯU *@
                        <button type="submit" class="btn btn-primary @(canEdit ? "" : "disabled")" id="submitButton">
                            <i class="bx bx-save me-1"></i> Lưu thay đổi
                        </button>

                        @* NÚT CHUYỂN QUA CHI TIẾT *@
                        <a asp-action="Details" asp-route-id="@Model?.MaBd" class="btn btn-info">
                            <i class="bx bx-detail me-1"></i> Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div> @* End card *@
</div> @* End container-xxl *@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // 1. HÀM SHOWTOAST (Dùng cho Create/Edit khi return View do lỗi)
        function showToast(message, type = 'success') {
            const alertPlaceholder = document.getElementById('alertPlaceholder');
            if (!alertPlaceholder) return;
            alertPlaceholder.innerHTML = '';

            const wrapper = document.createElement('div');
            wrapper.innerHTML = [
                `<div class="alert alert-${type} alert-dismissible" role="alert">`,
                `   <div>${message}</div>`,
                '   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>',
                '</div>'
            ].join('');
            alertPlaceholder.appendChild(wrapper);
            // KHÔNG TỰ ĐỘNG ẨN để người dùng đọc lỗi.
        }

        // 2. LOGIC XỬ LÝ FORM
        document.addEventListener('DOMContentLoaded', function () {

            const editForm = document.getElementById('editBanDocForm');
            const submitButton = document.getElementById('submitButton');

            // Logic chặn submit và đổi text nút
            if (editForm && submitButton) {
                editForm.addEventListener('submit', function (e) {
                    if ($(editForm).valid()) {
                        submitButton.disabled = true;
                        submitButton.innerHTML = '<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span> Đang lưu...';
                    }
                });
            }

            // Logic hiển thị thông báo từ TempData
            @if (TempData["StatusMessage"] != null && TempData["Message"] != null)
            {
                    // Chỉ gọi showToast và kích hoạt lại nút nếu là lỗi (danger)
                    if (TempData["StatusMessage"].ToString() == "danger")
                    {
                            <text>
                                setTimeout(function() {
                                    showToast('@Html.Raw(TempData["Message"])', '@TempData["StatusMessage"]');

                                    // Kích hoạt lại nút submit
                                    if (submitButton) {
                                        submitButton.disabled = false;
                                        submitButton.innerHTML = '<i class="bx bx-save me-1"></i> Lưu thay đổi';
                                    }
                                }, 10);
                            </text>
                    }
            }
        });
    </script>
}