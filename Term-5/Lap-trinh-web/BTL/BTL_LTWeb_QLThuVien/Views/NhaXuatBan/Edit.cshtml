@model Library_Manager.Models.TNhaXuatBan

@{
    ViewData["Title"] = "Chỉnh sửa Nhà Xuất Bản: " + Model.TenNxb;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userRole = Context.Session.GetString("UserRole");
    bool canEdit = (userRole == "QTV" || userRole == "QLT");
    // Lấy tên quốc gia để hiển thị tham khảo
    var tenQuocGia = Model.MaQgNavigation != null ?
    Model.MaQgNavigation.TenQg : Model.MaQg;
}

<div class="container-xxl flex-grow-1 container-p-y">

    @* Tiêu đề trang *@
    <h1 class="fw-bold text-primary mb-4">
        <i class='bx bx-pencil fs-2 me-2 border p-1 rounded-2'></i> Chỉnh sửa thông tin Nhà Xuất Bản
    </h1>

    @* PHẦN HIỂN THỊ THÔNG BÁO TEMP DATA *@
    @if (TempData["Message"] != null)
    {
        <div id="alertMessage" class="alert alert-@(TempData["StatusMessage"]) alert-dismissible" role="alert">
            @Html.Raw(TempData["Message"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header border-bottom">
            <h5 class="card-title mb-0">Chỉnh sửa thông tin cho: <span class="text-primary fw-bold">@Model.TenNxb</span></h5>
        </div>

        <form asp-action="Edit" id="editNxbForm">
            <div class="card-body">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                @* Mã NXB và Mã Quốc gia là Hidden fields *@
                <input type="hidden" asp-for="MaNxb" />
                <input type="hidden" asp-for="MaQg" />

                <div class="row">
                    <div class="col-md-6">
                        @* Mã Nhà Xuất Bản (Chỉ hiển thị) *@
                        <div class="mb-3">
                            <label class="form-label text-muted">Mã Nhà Xuất Bản</label>
                            <input value="@Model.MaNxb" class="form-control" disabled />
                        </div>

                        @* Quốc gia (Chỉ hiển thị - Không thể sửa) *@
                        <div class="mb-3">
                            <label class="form-label text-muted">Quốc gia (Không thể sửa)</label>
                            <input value="@tenQuocGia" class="form-control" disabled />
                            <small class="form-text text-warning">Mã NXB được sinh theo Quốc gia, không thể thay đổi.</small>
                        </div>
                    </div>

                    <div class="col-md-6">
                        @* Tên Nhà Xuất Bản *@
                        <div class="mb-3">
                            <label asp-for="TenNxb" class="form-label text-primary">Tên Nhà Xuất Bản</label>
                            <input asp-for="TenNxb" class="form-control" />
                            <span asp-validation-for="TenNxb" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </div>

            <div class="card-footer border-top pt-3">
                <div class="d-flex justify-content-between">

                    @* KHỐI BÊN TRÁI: Nút Quay lại - Dùng btn-outline-primary *@
                    <div>
                        <a asp-action="Index" class="btn btn-outline-primary">
                            <i class="bx bx-arrow-back me-1"></i> Quay lại danh sách
                        </a>
                    </div>

                    @* KHỐI BÊN PHẢI: Lưu & Xem chi tiết *@
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary @(canEdit ? "" : "disabled")" id="submitButton">
                            <i class="bx bx-save me-1"></i> Lưu thay đổi
                        </button>

                        <a asp-action="Details" asp-route-id="@Model?.MaNxb" class="btn btn-info">
                            <i class="bx bx-detail me-1"></i> Xem chi tiết
                        </a>
                    </div>

                </div>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // --- Logic chặn double submit và hiển thị lại nút khi lỗi ---
        document.addEventListener('DOMContentLoaded', function () {
            const editForm = document.getElementById('editNxbForm');
            const submitButton = document.getElementById('submitButton');
            const alertElement = document.getElementById('alertMessage');

            // Logic tự động đóng thông báo thành công (5 giây)
            if (alertElement && alertElement.classList.contains('alert-success')) {
                setTimeout(() => {
                    const alert = new bootstrap.Alert(alertElement);
                    alert.close();
                }, 5000);
            }
            // Logic kích hoạt lại nút submit nếu có lỗi trả về
            else if (alertElement && alertElement.classList.contains('alert-danger') && submitButton) {
                 submitButton.disabled = false;
                 submitButton.innerHTML = '<i class="bx bx-save me-1"></i> Lưu thay đổi';
            }


            if (editForm && submitButton) {
                editForm.addEventListener('submit', function (e) {
                    // Kiểm tra validation client-side
                    if ($(editForm).valid()) {
                        // Vô hiệu hóa nút Submit
                        submitButton.disabled = true;
                        submitButton.innerHTML = '<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span> Đang lưu...';
                    }
                });
            }
        });
    </script>
}