@model Library_Manager.Models.TNhaXuatBan

@{
    ViewData["Title"] = "Tạo mới Nhà Xuất Bản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">

    @* --- PHẦN HIỂN THỊ THÔNG BÁO TỪ TEMP DATA (Để hiển thị lỗi khi Controller return View) --- *@
    @if (TempData["Message"] != null)
    {
        <div id="alertMessage" class="alert alert-@(TempData["StatusMessage"]) alert-dismissible" role="alert">
            @Html.Raw(TempData["Message"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <h1 class="fw-bold text-primary mb-4">
        <i class='bx bx-plus fs-2 me-2 border p-1 rounded-2'></i> Tạo mới thông tin Nhà Xuất Bản
    </h1>

    <div class="card">
        <div class="card-header border-bottom">
            <h5 class="card-title mb-0">Nhập thông tin Nhà Xuất Bản mới</h5>
        </div>

        <form asp-action="Create">
            <div class="card-body">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="row">
                    <div class="col-md-6 pt-3">

                        @* Trường chọn Quốc gia *@
                        <div class="mb-3">
                            <label asp-for="MaQg" class="form-label">Quốc gia</label>
                            <select asp-for="MaQg" class="form-select" asp-items="ViewBag.MaQg">
                                <option value="" disabled selected>-- Chọn Quốc gia --</option>
                            </select>
                            <span asp-validation-for="MaQg" class="text-danger"></span>
                        </div>

                        @* Tên Nhà Xuất Bản *@
                        <div class="mb-3">
                            <label asp-for="TenNxb" class="form-label">Tên Nhà Xuất Bản</label>
                            <input asp-for="TenNxb" class="form-control" />
                            <span asp-validation-for="TenNxb" class="text-danger"></span>
                        </div>

                    </div>
                </div>
            </div> @* End card-body *@

            @* FOOTER CỦA CARD: Nút Tạo mới và Quay lại (Đã chuẩn hóa bố cục) *@
            <div class="card-footer border-top pt-3">
                <div class="d-flex justify-content-between">

                    @* NÚT QUAY LẠI DANH SÁCH (TRÁI) - Dùng btn-outline-primary *@
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="bx bx-arrow-back me-1"></i> Quay lại danh sách
                    </a>

                    @* NÚT TẠO MỚI (PHẢI) *@
                    <button type="submit" value="Create" class="btn btn-primary">
                        <i class="bx bx-plus me-1"></i> Tạo mới
                    </button>
                </div>
            </div>
        </form>
    </div> @* End card *@
</div> @* End container-xxl *@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}