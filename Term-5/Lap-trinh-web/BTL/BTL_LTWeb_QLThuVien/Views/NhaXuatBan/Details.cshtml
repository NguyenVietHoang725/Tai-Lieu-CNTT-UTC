@model Library_Manager.Models.TNhaXuatBan

@{
    // Tiêu đề trang, sử dụng tên Nhà Xuất Bản để hiển thị
    ViewData["Title"] = "Chi tiết Nhà Xuất Bản: " + Model.TenNxb;

    // Logic kiểm tra quyền chỉnh sửa/xóa
    var userRole = Context.Session.GetString("UserRole");
    bool canEdit = (userRole == "QTV" || userRole == "QLT");
}

@* ========================================================================
    KHỐI 1: CẤU TRÚC BỐ CỤC CHÍNH (CONTAINER)
    ======================================================================== *@
<div class="container-xxl flex-grow-1 container-p-y">

    @* --- PHẦN 1.1: TIÊU ĐỀ TRANG --- *@
    <h1 class="fw-bold text-primary mb-4">
        <i class='bx bx-detail bxs-buildings fs-2 me-2'></i> Chi tiết Nhà Xuất Bản
    </h1>

    @* --- KHỐI: CARD BAO QUANH DỮ LIỆU --- *@
    <div class="card">

        @* HEADER CỦA CARD: Hiển thị tên NXB và Mã NXB *@
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                Thông tin chi tiết của <span class="text-primary fw-bold">@Model.TenNxb</span>
            </h5>
            <small class="text-muted">Mã NXB: <span class="fw-bold">@Model.MaNxb</span></small>
        </div>

        @* BODY CỦA CARD: HIỂN THỊ DỮ LIỆU CHÍNH *@
        <div class="card-body">

            @* === THÔNG TIN CƠ BẢN === *@
            <h6 class="text-muted text-uppercase mb-3">
                <i class='bx bx-info-circle me-1'></i> Thông tin Nhà Xuất Bản
            </h6>

            <div class="row mb-4">
                <div class="col-md-6">

                    @* Mã Nhà Xuất Bản *@
                    <div class="mb-3">
                        <label class="form-label d-block text-secondary">Mã Nhà Xuất Bản</label>
                        <p class="text-primary fw-bold mb-0">@Model.MaNxb</p>
                    </div>

                    @* Tên Nhà Xuất Bản *@
                    <div class="mb-3">
                        <label class="form-label d-block text-secondary">Tên Nhà Xuất Bản</label>
                        <p class="fw-semibold mb-0">@Model.TenNxb</p>
                    </div>

                </div>
                <div class="col-md-6">
                    @* Quốc gia (Mới) *@
                    <div class="mb-3">
                        <label class="form-label d-block text-secondary">Quốc gia</label>
                        <p class="fw-semibold mb-0">
                            @(Model.MaQgNavigation != null ?
                                                        Model.MaQgNavigation.TenQg : "Chưa xác định")
                        </p>
                    </div>
                </div>
            </div>

        </div>

        @* FOOTER CỦA CARD: Chứa các nút Hành động *@
        <div class="card-footer border-top pt-3">
            <div class="d-flex justify-content-between">

                @* 1. Nút Quay lại (ĐƯA LÊN TRƯỚC, BÊN TRÁI) *@
                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="bx bx-arrow-back me-1"></i> Quay lại danh sách
                </a>

                @* 2. Nút Sửa (ĐƯA RA SAU, BÊN PHẢI) *@
                <a asp-action="Edit" asp-route-id="@Model?.MaNxb" class="btn btn-primary @(canEdit ? "" : "disabled")">
                    <i class="bx bx-pencil me-1"></i> Sửa thông tin
                </a>

            </div>
        </div>

    </div>
</div>