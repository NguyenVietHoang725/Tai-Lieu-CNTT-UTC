@model Library_Manager.Models.TNgonNgu

@{
    // Tiêu đề trang, sử dụng tên Ngôn ngữ để hiển thị
    ViewData["Title"] = "Chi tiết Ngôn ngữ: " + Model.TenNn;
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Logic kiểm tra quyền chỉnh sửa/xóa (Giả định QTV/QLS có quyền)
    var userRole = Context.Session.GetString("UserRole");
    bool canEdit = (userRole == "QTV" || userRole == "QLS");
}

@* ========================================================================
   KHỐI 1: CẤU TRÚC BỐ CỤC CHÍNH (CONTAINER)
   ======================================================================== *@
<div class="container-xxl flex-grow-1 container-p-y">

    @* --- PHẦN 1.1: TIÊU ĐỀ TRANG --- *@
    <h1 class="fw-bold text-primary mb-4">
        <i class='bx bx-detail bxs-globe fs-2 me-2'></i> Chi tiết Ngôn ngữ
    </h1>

    @* --- KHỐI: CARD BAO QUANH DỮ LIỆU --- *@
    <div class="card">

        @* HEADER CỦA CARD: Hiển thị tên Ngôn ngữ và Mã NN *@
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                Thông tin chi tiết của <span class="text-primary fw-bold">@Model.TenNn</span>
            </h5>
            <small class="text-muted">Mã NN: <span class="fw-bold">@Model.MaNn</span></small>
        </div>

        @* BODY CỦA CARD: HIỂN THỊ DỮ LIỆU CHÍNH *@
        <div class="card-body">

            @* === THÔNG TIN CƠ BẢN === *@
            <h6 class="text-muted text-uppercase mb-3">
                <i class='bx bx-info-circle me-1'></i> Chi tiết Ngôn ngữ
            </h6>

            <div class="row">
                <div class="col-12">

                    @* Mã Ngôn ngữ *@
                    <div class="mb-3">
                        <label class="form-label d-block text-secondary">Mã Ngôn ngữ</label>
                        <p class="text-primary fw-bold mb-0">@Model.MaNn</p>
                    </div>

                    @* Tên Ngôn ngữ *@
                    <div class="mb-3">
                        <label class="form-label d-block text-secondary">Tên Ngôn ngữ</label>
                        <p class="fw-semibold mb-0">@Model.TenNn</p>
                    </div>

                </div>
            </div>

        </div>

        @* FOOTER CỦA CARD: Chứa các nút Hành động *@
        <div class="card-footer border-top pt-3">
            <div class="d-flex gap-3">
                @* Nút Sửa *@
                <a asp-action="Edit" asp-route-id="@Model?.MaNn" class="btn btn-primary @(canEdit ? "" : "disabled")">
                    <i class="bx bx-pencil me-1"></i> Sửa thông tin
                </a>

                @* Nút Quay lại *@
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bx bx-arrow-back me-1"></i> Quay lại danh sách
                </a>
            </div>
        </div>

    </div>
</div>
