@model Library_Manager.Models.TBanSao

@{
    ViewData["Title"] = "Chỉnh sửa Bản sao: " + Model.MaBs;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    // Giả định quyền chỉnh sửa tương tự QLT
    var userRole = Context.Session.GetString("UserRole");
    bool canEdit = (userRole == "QTV" || userRole == "QLT");
}

@* ========================================================================
   KHỐI 1: CẤU TRÚC BỐ CỤC CHÍNH (CONTAINER)
   ======================================================================== *@
<div class="container-xxl flex-grow-1 container-p-y">

    @* --- PHẦN 1.1: TIÊU ĐỀ TRANG --- *@
    <h1 class="fw-bold text-primary mb-4">
        <i class='bx bx-pencil fs-2 me-2 border p-1 rounded-2'></i> Chỉnh sửa thông tin Bản sao
    </h1>

    @* --- KHỐI: CARD BAO QUANH BIỂU MẪU --- *@
    <div class="card">

        @* HEADER CỦA CARD: Tên bản sao đang chỉnh sửa *@
        <div class="card-header border-bottom">
            <h5 class="card-title mb-0">
                Chỉnh sửa Bản sao: <span class="text-info fw-bold">@Model.MaBs</span>
                <span class="text-secondary small ms-2">(Tài liệu: @Model.MaTlNavigation?.TenTl)</span>
            </h5>
        </div>

        <form asp-action="Edit">
            @* BODY CỦA CARD: Chứa Biểu mẫu nhập liệu *@
            <div class="card-body">

                @* Phần hiển thị lỗi tổng thể *@
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                @* Mã Bản sao (Hidden Field) - Cần thiết cho việc chỉnh sửa *@
                <input type="hidden" asp-for="MaBs" />

                @* TÁI CẤU TRÚC: CHIA BIỂU MẪU THÀNH 2 CỘT (Hoặc 1 cột lớn) *@
                <div class="row">

                    @* --- CỘT 1: THÔNG TIN CƠ BẢN (6/12) --- *@
                    <div class="col-md-6 pt-3">
                        <h6 class="text-muted text-uppercase mb-3 mt-0">
                            <i class='bx bx-copy me-1'></i> Thông tin Bản sao
                        </h6>

                        @* Mã Tài liệu (Select) *@
                        <div class="mb-3">
                            <label asp-for="MaTl" class="form-label">Tài liệu gốc</label>
                            @* Nên giữ lại MaTl như Readonly hoặc Disable nếu không được phép thay đổi tài liệu gốc *@
                            <select asp-for="MaTl" class="form-select" asp-items="ViewBag.MaTl">
                                <option value="">-- Chọn Tài liệu --</option>
                            </select>
                            <span asp-validation-for="MaTl" class="text-danger"></span>
                        </div>

                        @* Tình trạng (Sử dụng Select với các giá trị cố định) *@
                        <div class="mb-3">
                            <label asp-for="TrangThai" class="form-label">Tình trạng</label>
                            <select asp-for="TrangThai" class="form-select">
                                <option value="Có sẵn">Có sẵn</option>
                                <option value="Đang mượn">Đang mượn</option>
                                <option value="Hỏng">Hỏng</option>
                                <option value="Thất lạc">Thất lạc</option>
                            </select>
                            <span asp-validation-for="TrangThai" class="text-danger"></span>
                        </div>
                    </div>

                    @* --- CỘT 2: KHÔNG DÙNG (Dành cho thông tin khác nếu có) --- *@
                    <div class="col-md-6 pt-3">
                        <h6 class="text-muted text-uppercase mb-3 mt-0">
                            <i class='bx bx-info-circle me-1'></i> Thông tin thêm
                        </h6>
                        <p class="text-muted fst-italic">Các trường liên quan đến Bản sao chỉ bao gồm Tài liệu gốc và Tình trạng.</p>
                    </div>

                </div>
            </div> @* End card-body *@

            @* FOOTER CỦA CARD: Nút Lưu, Quay lại và Chi tiết *@
            <div class="card-footer border-top pt-3">
                <div class="d-flex justify-content-between">

                    @* KHỐI NÚT TRÁI (Quay lại) *@
                    @* <a asp-action="Index" asp-route-MaTl="@Model.MaTl" class="btn btn-secondary">
                        <i class="bx bx-arrow-back me-1"></i> Quay lại danh sách Bản sao
                    </a> *@

                    <div>
                        @if (!string.IsNullOrEmpty(ViewBag.ReturnUrl))
                        {
                            // Nếu có returnUrl, quay lại trang đó
                            <a href="@ViewBag.ReturnUrl" class="btn btn-secondary">
                                <i class="bx bx-arrow-back me-1"></i> Quay lại
                            </a>
                        }
                        else
                        {
                            // Nếu không, quay về trang Index mặc định của BanDoc
                            <a asp-action="Index" asp-route-MaTl="@Model.MaTl" class="btn btn-secondary">
                                <i class="bx bx-arrow-back me-1"></i> Quay lại danh sách Bản sao
                           </a>
                        }
                    </div>


                    @* KHỐI NÚT PHẢI (Lưu và Chi tiết) *@
                    <div class="d-flex gap-2">

                        @* NÚT LƯU *@
                        <button type="submit" class="btn btn-primary @(canEdit ? "" : "disabled")">
                            <i class="bx bx-save me-1"></i> Lưu thay đổi
                        </button>

                        @* NÚT CHUYỂN QUA CHI TIẾT *@
                        <a asp-action="Details" asp-route-id="@Model?.MaBs" class="btn btn-success">
                            <i class="bx bx-detail me-1"></i> Xem chi tiết Bản sao
                        </a>
                    </div>

                </div>
            </div>

        </form>
    </div> @* End card *@
</div> @* End container-xxl *@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}