@model Library_Manager.Models.TNhanVien

@{
    ViewData["Title"] = "Chỉnh sửa Nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userRole = Context.Session.GetString("UserRole");
    bool canEdit = (userRole == "QTV");
}

@* ========================================================================
   KHỐI 1: CẤU TRÚC BỐ CỤC CHÍNH (CONTAINER)
   ======================================================================== *@
<div class="container-xxl flex-grow-1 container-p-y">

    @* --- PHẦN HIỂN THỊ THÔNG BÁO TỪ TEMP DATA (Khi Controller return View) --- *@
    @if (TempData["Message"] != null)
    {
        <div id="alertPlaceholder" class="alert alert-@(TempData["StatusMessage"]) alert-dismissible" role="alert">
            @Html.Raw(TempData["Message"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* --- PHẦN 1.1: TIÊU ĐỀ TRANG --- *@
    <h1 class="fw-bold text-primary mb-4">
        <i class='bx bx-pencil fs-2 me-2 border p-1 rounded-2'></i> Chỉnh sửa thông tin nhân viên
    </h1>

    @* --- KHỐI: CARD BAO QUANH BIỂU MẪU --- *@
    <div class="card">

        @* HEADER CỦA CARD: Tên biểu mẫu đang chỉnh sửa *@
        <div class="card-header border-bottom">
            <h5 class="card-title mb-0">Chỉnh sửa thông tin cho: <span class="text-primary fw-bold">@Model.HoDem @Model.Ten</span></h5>
        </div>

        <form asp-action="Edit" id="editNhanVienForm">
            @* BODY CỦA CARD: Chứa Biểu mẫu nhập liệu *@
            <div class="card-body">

                @* Phần hiển thị lỗi tổng thể *@
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                @* Mã Nhân viên (Hidden Field) - Truyền PK đi *@
                <input type="hidden" asp-for="MaNv" />

                @* TÁI CẤU TRÚC: CHIA BIỂU MẪU THÀNH 2 CỘT & CHIA NHÓM THÔNG TIN *@
                <div class="row">

                    @* --- CỘT 1: THÔNG TIN CÁ NHÂN (6/12) --- *@
                    <div class="col-md-6 pt-3">
                        <h6 class="text-muted text-uppercase mb-3 mt-0">
                            <i class='bx bx-user me-1'></i> Thông tin cá nhân
                        </h6>

                        @* Mã Nhân viên (READONLY VÀ DISABLED) *@
                        <div class="mb-3">
                            <label class="form-label">Mã Nhân viên</label>
                            <input value="@Model.MaNv" class="form-control" readonly disabled />
                        </div>

                        @* Họ Đệm *@
                        <div class="mb-3">
                            <label asp-for="HoDem" class="form-label">Họ Đệm</label>
                            <input asp-for="HoDem" class="form-control" />
                            <span asp-validation-for="HoDem" class="text-danger"></span>
                        </div>

                        @* Tên *@
                        <div class="mb-3">
                            <label asp-for="Ten" class="form-label">Tên</label>
                            <input asp-for="Ten" class="form-control" />
                            <span asp-validation-for="Ten" class="text-danger"></span>
                        </div>

                        @* Ngày Sinh (Sử dụng type="date") *@
                        <div class="mb-3">
                            <label asp-for="NgaySinh" class="form-label">Ngày Sinh</label>
                            <input asp-for="NgaySinh" class="form-control" type="date" value="@Model.NgaySinh.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="NgaySinh" class="text-danger"></span>
                        </div>

                        @* Giới Tính (Sử dụng Select) *@
                        <div class="mb-3">
                            <label asp-for="GioiTinh" class="form-label">Giới Tính</label>
                            <select asp-for="GioiTinh" class="form-select">
                                <option value="M">Nam</option>
                                <option value="F">Nữ</option>
                            </select>
                            <span asp-validation-for="GioiTinh" class="text-danger"></span>
                        </div>
                    </div>

                    @* --- CỘT 2: THÔNG TIN LIÊN HỆ & CÔNG VIỆC (6/12) --- *@
                    <div class="col-md-6 pt-3">
                        <h6 class="text-muted text-uppercase mb-3 mt-0">
                            <i class='bx bx-phone me-1'></i> Thông tin liên hệ & Công việc
                        </h6>

                        @* Địa Chỉ *@
                        <div class="mb-3">
                            <label asp-for="DiaChi" class="form-label">Địa Chỉ</label>
                            <input asp-for="DiaChi" class="form-control" />
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>

                        @* Số Điện Thoại *@
                        <div class="mb-3">
                            <label asp-for="Sdt" class="form-label">Số Điện Thoại</label>
                            <input asp-for="Sdt" class="form-control" />
                            <span asp-validation-for="Sdt" class="text-danger"></span>
                        </div>

                        @* Email *@
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        @* Phụ trách (Dropdownlist + Input text TÍNH NĂNG "KHÁC") *@
                        <div class="mb-3">
                            <label asp-for="PhuTrach" class="form-label">Phụ trách</label>

                            @* Dropdown hiển thị các giá trị đã có *@
                            <select id="PhuTrachDropdown" class="form-select" asp-items="@(ViewData["PhuTrachList"] as SelectList)">
                                <option value="">-- Chọn chức vụ hiện có --</option>
                                <option value="Khac">-- Khác (Nhập thủ công) --</option> @* <-- Tùy chọn "Khác" *@
                            </select>

                            @* Input text (PhuTrach) - ẨN MẶC ĐỊNH, CHỈ HIỆN KHI CHỌN "KHÁC" *@
                            <div id="PhuTrachInputContainer" style="display: none;">
                                <input type="text" id="PhuTrachInput" class="form-control mt-2" placeholder="Nhập chức vụ mới" />
                            </div>

                            @* Input Hidden (ĐÃ CÓ asp-for="PhuTrach") - Giá trị sẽ được binding chính xác *@
                            @* LƯU Ý: Model.PhuTrach đã được bind ở đầu trang. Ta chỉ cần dùng JS để điều khiển giá trị này.*@
                            <input type="hidden" asp-for="PhuTrach" id="PhuTrachHidden" />

                            <span asp-validation-for="PhuTrach" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div> @* End card-body *@

            @* FOOTER CỦA CARD: Nút Lưu, Quay lại và Chi tiết *@
            <div class="card-footer border-top pt-3">
                <div class="d-flex justify-content-between">

                    @* NÚT QUAY LẠI DANH SÁCH (TRÁI) - Dùng btn-outline-primary *@
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="bx bx-arrow-back me-1"></i> Quay lại danh sách
                    </a>

                    @* KHỐI NÚT PHẢI (Lưu và Chi tiết) *@
                    <div class="d-flex gap-2">

                        @* NÚT LƯU *@
                        <button type="submit" class="btn btn-primary @(canEdit ? "" : "disabled")" id="submitButton">
                            <i class="bx bx-save me-1"></i> Lưu thay đổi
                        </button>

                        @* NÚT CHUYỂN QUA CHI TIẾT *@
                        <a asp-action="Details" asp-route-id="@Model?.MaNv" class="btn btn-info">
                            <i class="bx bx-detail me-1"></i> Xem chi tiết Nhân viên
                        </a>
                    </div>
                </div>
            </div>

        </form>
    </div> @* End card *@
</div> @* End container-xxl *@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Hàm hiển thị thông báo lỗi tại chỗ (Không tự động ẩn)
        function showToast(message, type = 'danger') {
            const alertPlaceholder = document.getElementById('alertPlaceholder');
            if (!alertPlaceholder) return;
            alertPlaceholder.innerHTML = '';

            if (type === 'danger') {
                const wrapper = document.createElement('div');
                wrapper.innerHTML = [
                    `<div class="alert alert-danger alert-dismissible" role="alert">`,
                    `   <div>${message}</div>`,
                    '   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>',
                    '</div>'
                ].join('');
                alertPlaceholder.appendChild(wrapper);
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const editForm = document.getElementById('editNhanVienForm');
            const submitButton = document.getElementById('submitButton');
            const phuTrachDropdown = document.getElementById('PhuTrachDropdown');
            const phuTrachInput = document.getElementById('PhuTrachInput');
            const phuTrachInputContainer = document.getElementById('PhuTrachInputContainer');
            const phuTrachHidden = document.getElementById('PhuTrachHidden');

            // LƯU Ý: Trong Edit, Model.PhuTrach đã được bind vào phuTrachHidden (input type="hidden")
            // và đã được pre-select trong phuTrachDropdown (nếu giá trị khớp).

            // Hàm kiểm tra và cập nhật giao diện/giá trị input
            function updatePhuTrachFields() {
                const selectedValue = phuTrachDropdown.value;
                const isOther = selectedValue === "Khac";
                const isInputDirty = phuTrachInput.value !== "";

                if (isOther) {
                    // Nếu chọn "Khác", hiển thị ô nhập
                    phuTrachInputContainer.style.display = 'block';
                    // Giá trị sẽ được lấy trực tiếp từ ô nhập text khi submit
                } else {
                    // Nếu chọn chức vụ cụ thể (hoặc '-- Chọn...'), ẩn ô nhập
                    phuTrachInputContainer.style.display = 'none';
                    // Giá trị sẽ được lấy trực tiếp từ dropdown khi submit
                    phuTrachHidden.value = selectedValue;
                }
            }

            // GÁN SỰ KIỆN: Dropdown thay đổi
            if (phuTrachDropdown) {
                phuTrachDropdown.addEventListener('change', function() {
                    if (this.value === "Khac") {
                        // Nếu chọn "Khác", xóa giá trị trong trường ẩn và trường text
                        // (Đã được bind vào phuTrachHidden) để người dùng nhập mới
                        phuTrachInput.value = "";
                        phuTrachHidden.value = "";
                    } else {
                         // Nếu chọn giá trị có sẵn, gán giá trị đó vào trường ẩn và trường text (để hiển thị)
                        phuTrachInput.value = this.value;
                        phuTrachHidden.value = this.value;
                    }
                    updatePhuTrachFields();
                });
            }

            // GÁN SỰ KIỆN: Input text thay đổi (chỉ khi chọn "Khác")
            if (phuTrachInput) {
                 phuTrachInput.addEventListener('input', function() {
                    if (phuTrachDropdown.value === "Khac") {
                        // Cập nhật giá trị gõ vào trường ẩn (để bind)
                        phuTrachHidden.value = this.value;
                    }
                });
            }

            // KHỞI TẠO (Xử lý khi tải trang)
            const initialValue = phuTrachHidden.value;
            const isInitialValueInDropdown = Array.from(phuTrachDropdown.options).some(opt => opt.value === initialValue && initialValue !== "");

            // Nếu Model.PhuTrach có giá trị nhưng KHÔNG có trong Dropdown List
            if (initialValue && !isInitialValueInDropdown) {
                // Đặt dropdown về "Khác" và hiển thị Input Text
                phuTrachDropdown.value = "Khac";
                phuTrachInput.value = initialValue;
            } else if (isInitialValueInDropdown) {
                // Nếu giá trị có trong dropdown, ta xóa input text để người dùng không bị phân tâm
                phuTrachInput.value = "";
            } else {
                 // Nếu không có giá trị nào, đảm bảo input text trống
                phuTrachInput.value = "";
            }

            // Chạy hàm cập nhật lần đầu để thiết lập giao diện (ẩn/hiện input)
            updatePhuTrachFields();

            // 1. Logic vô hiệu hóa nút khi submit
            if (editNhanVienForm && submitButton) {
                editNhanVienForm.addEventListener('submit', function(e) {
                    // Cập nhật giá trị cuối cùng từ Input Text vào trường ẩn (nếu đang ở chế độ Khác)
                    updatePhuTrachFields();
                    if ($(editNhanVienForm).valid()) {
                        submitButton.disabled = true;
                        submitButton.innerHTML = '<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span> Đang lưu...';
                    }
                });
            }

            // 2. Logic hiển thị thông báo từ TempData (chỉ chạy khi có lỗi)
            @if (TempData["StatusMessage"] != null && TempData["Message"] != null)
            {
                        if (TempData["StatusMessage"].ToString() == "danger")
                        {
                                    <text>
                                        setTimeout(function() {
                                            showToast('@Html.Raw(TempData["Message"])', '@TempData["StatusMessage"]');

                                            // Kích hoạt lại nút submit sau khi trang load lại nếu có lỗi
                                            if (submitButton) {
                                                submitButton.disabled = false;
                                                submitButton.innerHTML = '<i class="bx bx-save me-1"></i> Lưu thay đổi';
                                            }
                                        }, 10);
                                    </text>
                        }
            }
        });
    </script>
}