@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<Library_Manager.Models.TGiaoDichMuonTra>

@{
    ViewData["Title"] = "Quản lý Giao dịch Mượn/Trả";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userRole = Context.Session.GetString("UserRole");
    bool canEdit = (userRole == "QTV" || userRole == "QLM");
}

@* ========================================================================
    KHỐI 2: CẤU TRÚC BỐ CỤC CHÍNH (CONTAINER)
    ======================================================================== *@
<div class="container-xxl flex-grow-1 container-p-y">

    @* --- PHẦN HIỂN THỊ THÔNG BÁO TỪ TEMP DATA --- *@
    @if (TempData["Message"] != null)
    {
        <div id="indexAlertMessage" class="alert alert-@(TempData["StatusMessage"]) alert-dismissible" role="alert">
            @Html.Raw(TempData["Message"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* --- PHẦN 2.1: TIÊU ĐỀ TRANG --- *@
    <h1 class="fw-bold text-primary mb-4">
        <i class='bx bx-transfer-alt fa-border fs-1 me-2'></i> @ViewData["Title"]
    </h1>

    <div class="card">
        @* --- PHẦN 2.2: THANH TÁC VỤ (SEARCH & CREATE) --- *@
        <div class="card-header border-bottom">
            <div class="d-flex justify-content-between align-items-center">

                @* Thanh Tìm kiếm (SearchBar Partial) - Chiếm phần lớn không gian *@
                <div class="flex-grow-1 me-3">
                    <partial name="SearchBar" />
                </div>

                @* Nút Thêm mới - Cố định bên phải *@
                <div class="flex-shrink-0 ">
                    <p class="m-0">
                        <a asp-action="Create" class="btn btn-primary text-nowrap @(canEdit ? "" : "disabled")">
                            <i class="bx bx-plus me-1"></i> Thêm Giao dịch mới
                        </a>
                    </p>
                </div>
            </div>
        </div>

        @* ========================================================================
            KHỐI 3: BẢNG DỮ LIỆU VÀ PHÂN TRANG
            ======================================================================== *@
        <div class="table-responsive">
            <table class="table table-bordered text-nowrap table-hover align-middle" id="myTable">

                @* --- PHẦN 3.1: TIÊU ĐỀ BẢNG (THEAD) --- *@
                <thead id="myTableHead">
                    <tr>
                        <th>Mã GD</th>
                        <th>Tên Bạn đọc</th>
                        <th>Thẻ BD</th>
                        <th>Ngày mượn</th>
                        <th>Ngày hẹn trả</th>
                        <th>Ngày trả</th>
                        <th>Trạng thái</th>
                        <th style="min-width: 120px;">Hành động</th>
                    </tr>
                </thead>

                @* --- PHẦN 3.2: NỘI DUNG BẢNG (TBODY) --- *@
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            @* Logic cho Badge Trạng Thái *@
                            var trangThai = item.TrangThai;
                            var badgeClass = "bg-label-secondary"; // Mặc định
                            if (trangThai == "Đã trả") { badgeClass = "bg-label-success"; }
                            else if (trangThai == "Quá hạn") { badgeClass = "bg-label-danger"; }
                            else if (trangThai == "Đang mượn") { badgeClass = "bg-label-warning"; }

                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.MaGd)</td>

                        @* Tên Bạn đọc (Lấy từ Thẻ > Bạn đọc) *@
                        <td>
                            @(item.MaTbdNavigation?.MaBdNavigation != null ?
                                                        (item.MaTbdNavigation.MaBdNavigation.HoDem + " " + item.MaTbdNavigation.MaBdNavigation.Ten) :
                                                        "(Không rõ)")
                        </td>

                                <td>@Html.DisplayFor(modelItem => item.MaTbd)</td>
                                <td>@item.NgayMuon.ToString("dd/MM/yyyy")</td>
                                <td>@item.NgayHenTra.ToString("dd/MM/yyyy")</td>
                                <td>@item.NgayTra?.ToString("dd/MM/yyyy")</td>

                                <td>
                                    <span class="badge @badgeClass">@trangThai</span>
                                </td>

                                <td>
                                    <div class="d-flex w-100 justify-content-around">

                                        @* 1. Chi tiết (Details) *@
                                        <a asp-action="Details" asp-route-id="@item.MaGd"
                                                                 class="btn btn-icon btn-label-info waves-effect "
                                                                 data-bs-toggle="tooltip" data-bs-placement="top" title="Chi tiết">
                                            <i class='bx bx-detail'></i>
                                        </a>

                                        @* 2. Sửa (Edit) *@
                                        <a asp-action="Edit" asp-route-id="@item.MaGd"
                                                                 class="btn btn-icon btn-label-primary waves-effect @(canEdit ? "" : "disabled")"
                                                                 data-bs-toggle="tooltip" data-bs-placement="top" title="Sửa">
                                            <i class='bx bx-pencil'></i>
                                        </a>

                                        @* 3. Xóa (Delete) *@
                                        <a asp-action="Delete" asp-route-id="@item.MaGd"
                                                                 class="btn btn-icon btn-label-danger waves-effect @(canEdit ? "" : "disabled")"
                                                                 data-bs-toggle="tooltip" data-bs-placement="top" title="Xóa">
                                            <i class='bx bx-trash'></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">Không có dữ liệu</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* --- PHẦN 3.3: PHÂN TRANG (PAGINATION) --- *@
        <div class="card-footer pt-0">
            <partial name="_Pagination" />
        </div>

    </div>

</div>

@section Scripts {
    <script>
        // Thời gian chờ (milliseconds) trước khi thông báo biến mất
        const AUTO_CLOSE_DELAY = 5000; // 5 giây

        document.addEventListener('DOMContentLoaded', function() {
            const alertElement = document.getElementById('indexAlertMessage');

            // Logic tự động đóng thông báo thành công
            if (alertElement && alertElement.classList.contains('alert-success')) {
                setTimeout(() => {
                    // Cần thư viện Bootstrap JS để Alert.close() hoạt động
                    const alert = new bootstrap.Alert(alertElement);
                    alert.close();
                }, AUTO_CLOSE_DELAY);
            }
        });
    </script>
}