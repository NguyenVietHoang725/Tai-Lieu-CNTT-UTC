@model Library_Manager.Models.TGiaoDichMuonTra

@{
    ViewData["Title"] = "Xóa Giao dịch: " + Model.MaGd;
}

@* Logic cho Badge Trạng Thái (Copy từ Details) *@
@{
    var trangThai = Model.TrangThai;
    var badgeClass = "bg-label-secondary"; // Mặc định
    if (trangThai == "Đã trả") { badgeClass = "bg-label-success"; }
    else if (trangThai == "Quá hạn") { badgeClass = "bg-label-danger"; }
    else if (trangThai == "Đang mượn") { badgeClass = "bg-label-warning"; }
}

@* ========================================================================
    KHỐI 1: CẤU TRÚC BỐ CỤC CHÍNH (CONTAINER)
    ======================================================================== *@
<div class="container-xxl flex-grow-1 container-p-y">

    @* --- PHẦN 1.1: TIÊU ĐỀ TRANG --- *@
    <h1 class="fw-bold text-danger mb-4">
        <i class='bx bx-trash fs-2 me-2 border p-1 rounded-2'></i> Xác nhận xóa Giao dịch
    </h1>

    @* --- KHỐI CẢNH BÁO XÓA --- *@
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">CẢNH BÁO QUAN TRỌNG!</h4>
        <p>Bạn đang chuẩn bị **xóa vĩnh viễn** Giao dịch có mã: <strong class="fs-5">@Model.MaGd</strong>. Hành động này không thể hoàn tác.</p>
        <p class="mb-0">Vui lòng kiểm tra kỹ thông tin bên dưới trước khi xác nhận.</p>
    </div>

    @* --- KHỐI: CARD BAO QUANH THÔNG TIN CHI TIẾT --- *@
    <div class="card">

        @* HEADER CỦA CARD: Tên bạn đọc *@
        <div class="card-header border-bottom">
            <h5 class="card-title mb-0">Chi tiết Giao dịch: <span class="text-danger fw-bold">@Model.MaGd</span></h5>
        </div>

        @* BODY CỦA CARD: Hiển thị chi tiết (Dùng cấu trúc 2 cột như Details) *@
        <div class="card-body">

            <div class="row">

                @* --- THÔNG TIN GIAO DỊCH (Cột 1) --- *@
                <div class="col-md-6 pt-3">
                    <h6 class="text-muted text-uppercase mb-3 mt-0">
                        <i class='bx bx-transfer-alt me-1'></i> Thông tin Giao dịch
                    </h6>
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Mã Giao dịch:</dt>
                        <dd class="col-sm-8 fw-bold text-danger">@Model.MaGd</dd>

                        <dt class="col-sm-4 text-muted">Trạng thái:</dt>
                        <dd class="col-sm-8"><span class="badge @badgeClass">@trangThai</span></dd>

                        <dt class="col-sm-4 text-muted">Ngày Mượn:</dt>
                        <dd class="col-sm-8">@Model.NgayMuon.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4 text-muted">Ngày Hẹn Trả:</dt>
                        <dd class="col-sm-8">@Model.NgayHenTra.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4 text-muted">Ngày Trả:</dt>
                        <dd class="col-sm-8">@(Model.NgayTra?.ToString("dd/MM/yyyy") ?? "(Chưa trả)")</dd>
                    </dl>
                </div>

                @* --- THÔNG TIN CÁC BÊN (Cột 2) --- *@
                <div class="col-md-6 pt-3">
                    <h6 class="text-muted text-uppercase mb-3 mt-0">
                        <i class='bx bx-user-pin me-1'></i> Thông tin Các bên
                    </h6>
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Bạn đọc:</dt>
                        <dd class="col-sm-8 **fw-bold**">
                            @(Model.MaTbdNavigation?.MaBdNavigation != null ?
                                                        (Model.MaTbdNavigation.MaBdNavigation.HoDem + " " + Model.MaTbdNavigation.MaBdNavigation.Ten) :
                                                        "(Không rõ)")
                        </dd>
                        <dt class="col-sm-4 text-muted">Mã Thẻ BD:</dt>
                        <dd class="col-sm-8">@Model.MaTbd</dd>

                        <dt class="col-sm-4 text-muted">Nhân viên:</dt>
                        <dd class="col-sm-8">
                            @(Model.MaTkNavigation?.MaNvNavigation != null ?
                                                        (Model.MaTkNavigation.MaNvNavigation.HoDem + " " + Model.MaTkNavigation.MaNvNavigation.Ten) :
                                                        @Model.MaTk)
                        </dd>
                    </dl>
                </div>
            </div>

        </div> @* End card-body *@

        @* FOOTER CỦA CARD: Nút Xác nhận và Quay lại (ĐÃ ĐIỀU CHỈNH) *@
        <div class="card-footer border-top pt-3">
            <form asp-action="Delete">
                <input type="hidden" asp-for="MaGd" />
                <div class="d-flex justify-content-between">

                    @* NÚT QUAY LẠI (TRÁI) - Dùng btn-outline-primary *@
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="bx bx-arrow-back me-1"></i> Quay lại danh sách
                    </a>

                    @* NÚT XÁC NHẬN XÓA (PHẢI CÙNG) *@
                    <button type="submit" value="Delete" class="btn btn-danger">
                        <i class="bx bx-trash me-1"></i> XÁC NHẬN XÓA
                    </button>

                </div>
            </form>
        </div>

    </div> @* End card *@
</div> @* End container-xxl *@