@model Library_Manager.Models.TTaiLieuTacGia

@{
    ViewData["Title"] = "Chỉnh sửa Vai trò Tác giả";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* ========================================================================
   KHỐI 1: CẤU TRÚC BỐ CỤC CHÍNH (CONTAINER)
   ======================================================================== *@
<div class="container-xxl flex-grow-1 container-p-y">

    @* --- PHẦN 1.1: TIÊU ĐỀ TRANG --- *@
    <h1 class="fw-bold text-primary mb-4">
        <i class='bx bx-pencil fs-2 me-2 border p-1 rounded-2'></i> Chỉnh sửa Vai trò Tác giả
    </h1>

    @* --- KHỐI: CARD BAO QUANH BIỂU MẪU --- *@
    <div class="card">

        @* HEADER CỦA CARD: Thông tin về liên kết đang chỉnh sửa *@
        <div class="card-header border-bottom">
            <h5 class="card-title mb-0">
                Liên kết đang chỉnh sửa:
                <span class="text-info fw-bold">@Model.MaTgNavigation?.HoDem @Model.MaTgNavigation?.Ten</span>
                và Tài liệu:
                <span class="text-secondary fw-bold">@Model.MaTlNavigation?.TenTl</span>
            </h5>
        </div>

        <form asp-action="Edit">
            @* BODY CỦA CARD: Chứa Biểu mẫu nhập liệu *@
            <div class="card-body">

                @* Phần hiển thị lỗi tổng thể *@
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                @* Khóa chính kép (Hidden Fields) - Cần thiết cho việc chỉnh sửa *@
                <input type="hidden" asp-for="MaTl" />
                <input type="hidden" asp-for="MaTg" />

                @* --- TRƯỜNG DUY NHẤT CÓ THỂ CHỈNH SỬA: VAI TRÒ --- *@
                <div class="row">
                    <div class="col-md-6 pt-3">
                        <h6 class="text-muted text-uppercase mb-3 mt-0">
                            <i class='bx bx-sitemap me-1'></i> Chi tiết liên kết
                        </h6>

                        @* Vai trò *@
                        <div class="mb-3">
                            <label asp-for="VaiTro" class="form-label">Vai trò của Tác giả trong Tài liệu</label>
                            <input asp-for="VaiTro" class="form-control" placeholder="Ví dụ: Tác giả chính, Biên tập viên, Dịch giả..." />
                            <span asp-validation-for="VaiTro" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div> @* End card-body *@

            @* FOOTER CỦA CARD: Nút Lưu và Quay lại *@
            <div class="card-footer border-top pt-3">
                <div class="d-flex justify-content-start gap-3">

                    @* NÚT LƯU *@
                    <button type="submit" value="Save" class="btn btn-primary">
                        <i class="bx bx-save me-1"></i> Lưu thay đổi
                    </button>

                    @* NÚT QUAY LẠI DANH SÁCH (Sử dụng MaTl để quay lại danh sách Tác giả của Tài liệu này) *@
                    <a asp-action="Index" asp-route-MaTl="@Model.MaTl" class="btn btn-secondary">
                        <i class="bx bx-arrow-back me-1"></i> Quay lại danh sách Tác giả
                    </a>
                </div>
            </div>

        </form>
    </div> @* End card *@
</div> @* End container-xxl *@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}