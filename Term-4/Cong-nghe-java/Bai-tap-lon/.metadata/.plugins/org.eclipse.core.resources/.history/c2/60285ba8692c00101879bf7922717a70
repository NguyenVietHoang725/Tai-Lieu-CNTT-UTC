package com.battleship.core.service.attack;

import com.battleship.core.model.board.Board;
import com.battleship.core.model.board.Position;
import com.battleship.core.model.player.Player;

import java.util.List;

import com.battleship.core.model.attack.AttackResult;

public interface IAttackService {
	/**
     * Tạo người chơi mới
     */
    Player createPlayer(String name);
    
    /**
     * Chuyển lượt chơi
     */
    void switchTurn();
    
    /**
     * Kiểm tra xem có phải lượt của người chơi không
     */
    boolean isPlayerTurn(Player player);
    
    /**
     * Lấy người chơi hiện tại
     */
    Player getCurrentPlayer();
    
    /**
     * Lấy người chơi đối phương
     */
    Player getOpponentPlayer();
    
    /**
     * Kiểm tra xem người chơi đã thua chưa
     */
    boolean isPlayerDefeated(Player player);
    
    /**
     * Lấy bàn cờ của người chơi
     */
    Board getPlayerBoard(Player player);
    
    /**
     * Lấy bàn cờ của đối phương
     */
    Board getOpponentBoard(Player player);
    
    /**
     * Kiểm tra xem người chơi có thể tấn công không
     */
    boolean canPlayerAttack(Player player);
}