package com.battleship.core.service.interfaces;

import com.battleship.core.model.attack.AttackResult;
import com.battleship.core.model.board.Position;
import com.battleship.core.model.player.IPlayer;
import com.battleship.core.model.ship.Ship;
import com.battleship.core.model.state.PlayerState;

public interface IPlayerService {
	IPlayer createPlayer(String name);

	IPlayer createBot(String name, String difficulty);

	void placeShip(IPlayer player, Ship ship, Position position);

	boolean canAttack(IPlayer player, Position position);

	void updatePlayerState(IPlayer player, AttackResult result);

	PlayerState getPlayerState(IPlayer player);

	boolean isDefeated(IPlayer player);

	int getShotsRemaining(IPlayer player);
}