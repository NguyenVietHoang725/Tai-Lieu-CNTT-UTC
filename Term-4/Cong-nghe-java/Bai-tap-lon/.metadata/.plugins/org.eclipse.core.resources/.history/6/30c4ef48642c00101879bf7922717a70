package com.battleship.core.strategy.attack;

import com.battleship.core.model.Position;
import com.battleship.core.model.board.IBoard;
import java.util.ArrayList;
import java.util.HashSet;
import java.util.List;
import java.util.Random;
import java.util.Set;

/**
 * Chiến lược tấn công ngẫu nhiên - tấn công ô chính và thêm một số ô ngẫu nhiên
 */
public class RandomAttackStrategy implements IAttackStrategy {
    private static final int EXTRA_RANDOM_SHOTS = 3;
    private final Random random = new Random();

    @Override
    public List<Position> getAttackPositions(Position position, IBoard board) {
        List<Position> positions = new ArrayList<>();
        Set<String> visited = new HashSet<>();
        
        // Thêm vị trí chính nếu hợp lệ
        if (board.isValidPosition(position.getX(), position.getY())) {
            positions.add(position);
            visited.add(position.getX() + "," + position.getY());
        }
        
        // Thêm các vị trí ngẫu nhiên
        int count = 0;
        while (count < EXTRA_RANDOM_SHOTS) {
            int x = random.nextInt(board.getSize());
            int y = random.nextInt(board.getSize());
            String key = x + "," + y;
            
            if (!visited.contains(key)) {
                positions.add(new Position(x, y));
                visited.add(key);
                count++;
            }
        }
        
        return positions;
    }
}